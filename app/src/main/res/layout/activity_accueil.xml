<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_choix_modes_dark"
    tools:context="masterigis.com.jukebox2_0.Accueil">

    <Button
        android:id="@+id/bouton_mode_non_connecte"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="@drawable/custom_ripple"
        android:textSize="20sp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="@string/texte_bouton_mode_non_connecte"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#125081"/>

    <Button
        android:id="@+id/bouton_mode_connecte"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="@drawable/custom_ripple"
        android:textSize="20sp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="@string/texte_bouton_mode_connecte"/>

</LinearLayout>
